{
  "name": "rich-text-editor",
  "version": "7.1.8",
  "description": "Rich text editor",
  "private": "true",
  "author": "",
  "homepage": "https://github.com/ma100dev/rich-text-editor",
  "main": "dist/rich-text-editor.js",
  "types": "index.d.ts",
  "files": [
    "dist/*",
    "server/*",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "build:tsc": "tsc -p src",
    "build:assets": "bash -c 'mkdir -p dist; cp public/{rich-text-editor.css,*.svg} dist/'",
    "build": "concurrently --prefix \"[{name}]\" --names \"TSC,ASSETS\" \"npm run build:tsc\" \"npm run build:assets\"",
    "build:bundle": "bash -c 'TYPECHECK=1 webpack --mode production --config webpack.bundle.config.js'",
    "start": "node test/index.js",
    "test": "eslint . && node test/testRunner.js",
    "dev": "nodemon -i public,test -e .js,.ts,.html test/index.js",
    "generateMathButtons": "scripts/createMathSvg.js && prettier --write src/latexCommandsWithSvg.js",
    "lint": "eslint . --ext .js,.ts,.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digabi/rich-text-editor.git"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.0.0",
    "@digabi/eslint-config": "^2.0.1",
    "@html-eslint/eslint-plugin": "^0.19.1",
    "@html-eslint/parser": "^0.19.1",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "blueimp-mocha-chrome": "2.3.0",
    "bower": "^1.8.14",
    "buffer": "^6.0.3",
    "chai": "^4.2.0",
    "chai-jquery": "^2.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.16.4",
    "html-minifier": "^4.0.0",
    "livereload": "^0.9.3",
    "mocha": "^10.0.0",
    "morgan": "^1.9.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sanitize-html": "^2.0.0",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tslib": "^2.0.1",
    "typescript": "^5.0.2",
    "uglify-js": "^3.17.4",
    "web-console-reporter": "^1.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-middleware": "^6.0.0"
  },
  "dependencies": {
    "@digabi/mathquill": "^0.10.12",
    "@types/express": "*",
    "connect-livereload": "^0.6.1",
    "jquery": "3.x",
    "mathjax-node": "^2.1.1"
  },
  "peerDependencies": {
    "jquery": "3.x",
    "sanitize-html": "^2.0.0"
  }
}
